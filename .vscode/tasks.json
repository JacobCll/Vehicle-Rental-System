{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: g++ build active file",
      "type": "cppbuild",
      "command": "g++",
      "args": [
        "${workspaceFolder}/src/*.cpp",
        "${workspaceFolder}/src/models/*.cpp",
        "${workspaceFolder}/src/menu/*.cpp",
        "${workspaceFolder}/src/managers/*.cpp",
        "${workspaceFolder}/src/system/*.cpp",
        "${workspaceFolder}/src/ui/*.cpp",
        "-o",
        "${workspaceFolder}/build/vehicle_rental_system.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build all source files and place executable in build folder."
    }
  ]
}
