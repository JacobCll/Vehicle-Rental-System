│   ├── VehicleService.h
│   ├── RentalService.h
│   ├── ProfileService.h
│   ├── WalletService.h
│   ├── Menu.h
│   ├── Utils.h
│   └── constants.h
│
├── data/                   # Flat-file "database"
│   ├── users.txt
