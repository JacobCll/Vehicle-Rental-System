│   ├── system/             # Core system logic
│   │   ├── App.cpp         # App controller (main loop, menus)
│   │   ├── Database.cpp    # File handling or mock database
│   │   └── Utils.cpp       # Helper functions (input validation, formatting, etc.)
│   │
│   ├── models/             # Data structures (OOP classes)
│   │   ├── User.cpp
│   │   ├── Vehicle.cpp
│   │   ├── Rental.cpp
│   │   └── Wallet.cpp
│   │
│   ├── services/           # Business logic (feature modules)
│   │   ├── AuthService.cpp     # Login / Signup / Logout
│   │   ├── VehicleService.cpp  # Vehicle browsing, viewing
│   │   ├── RentalService.cpp   # Renting, returning
│   │   ├── ProfileService.cpp  # Profile view/update
│   │   └── WalletService.cpp   # Top-up management
│   │
│   └── ui/                 # User interface / menus
│       ├── Menu.cpp
│       ├── ProfileMenu.cpp
│       ├── VehicleMenu.cpp
│       └── RentalMenu.cpp
│
